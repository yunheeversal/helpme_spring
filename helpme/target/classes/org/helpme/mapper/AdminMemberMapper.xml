 <!-- 회원 상세조회 -->
  <select id="viewMember" resultType="org.helpme.domain.MemberVO">
         select 
        userId ,
		userPw  ,
		userEmail,
		userName,
		phone,
		gender,
		address,
		regDate,
		sms,
		accTerms,
		userRank
		from member where userId = #{userId}
   
 </select>
 
  <!-- 회원 수정 -->
 <update id="updateMember">
		UPDATE MEMBER 
		SET 	
		userId = #{userId},
		userPw=#{userPw},
		userEmail=#{userEmail},
		userName=#{userName},
		phone=#{phone},
		address=#{address},
		sms=#{sms},
		userRank=#{userRank}
		 where userId = #{userId}
	</update>

<!-- 회원 삭제 -->
    <delete id="deleteMember">
		delete from member where userId = #{userId}
	</delete>

<sql id="search">
 <if test="searchType != null" > 
   <if test="searchType == 't'.toString()">
     and userId like '#{keyword}' 
   </if>
      </if>
</sql>

